<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.stepic.droid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="false">

        <activity
            android:name="org.stepic.droid.view.activities.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="stepic.org"
                    android:pathPattern="/oauth"
                    android:scheme="stepic"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.CourseDetailActivity">
            <intent-filter android:autoVerify="true" tools:ignore="UnusedAttribute">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="https"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/"/>

                <data
                    android:scheme="http"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/"/>

                <data
                    android:scheme="https"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/course_app"/>

                <data
                    android:scheme="http"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/course_app"/>

            </intent-filter>
        </activity>

        <activity android:name=".view.activities.SectionActivity">
            <intent-filter android:autoVerify="true" tools:ignore="UnusedAttribute">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="https"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/syllabus.*"/>

                <data
                    android:scheme="http"
                    android:host="stepic.org"
                    android:pathPattern="/course/.*/syllabus.*"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
