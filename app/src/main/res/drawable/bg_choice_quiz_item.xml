<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/not_checked_layer">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/bg_choice_not_checked_ripple" />
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/choice_not_checked" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/choice_not_checked_border" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@+id/checked_layer">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/bg_choice_checked_ripple"/>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/choice_checked" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/choice_checked_border" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@+id/correct_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/choice_correct" />
            <stroke
                android:width="1dp"
                android:color="@color/choice_correct_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:id="@+id/incorrect_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/choice_incorrect" />
            <stroke
                android:width="1dp"
                android:color="@color/choice_incorrect_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>