<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/checked_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/step_quiz_choice_checked" />
            <corners android:radius="@dimen/step_quiz_fill_blanks_item_radius" />
        </shape>
    </item>

    <item android:drawable="@drawable/bg_step_quiz_fill_blanks_ripple" />

    <item android:id="@+id/correct_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/step_quiz_choice_correct" />
            <corners android:radius="@dimen/step_quiz_fill_blanks_item_radius" />
        </shape>
    </item>

    <item android:id="@+id/incorrect_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/step_quiz_choice_wrong" />
            <corners android:radius="@dimen/step_quiz_fill_blanks_item_radius" />
        </shape>
    </item>
</layer-list>