<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_centered_appbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/progress_bar_on_empty_screen" />

        <include layout="@layout/empty_default"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/attemptsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/attemptsSubmissionSeparator"
            android:fillViewport="true">
            <RelativeLayout
                android:id="@+id/attemptsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/attemptsFeedback"
                    style="@style/StepQuizFeedback"
                    android:background="@drawable/bg_step_quiz_feedback_evaluation"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:drawablePadding="16dp"

                    android:layout_margin="16dp"

                    android:text="@string/attempts_information_block"
                    android:textColor="@color/violet1"

                    android:layout_alignParentTop="true"

                    tools:drawableStart="@drawable/ic_step_quiz_validation" />

                <View
                    android:id="@+id/attemptsFeedbackSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/step_quiz_separator"
                    android:layout_below="@id/attemptsFeedback"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/attemptsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attemptsFeedbackSeparator" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/attemptsSubmissionSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/step_quiz_separator"
            android:layout_above="@id/attemptsSubmitFeedback"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attemptsSubmitFeedback"
            style="@style/StepQuizFeedback"
            android:background="@drawable/bg_step_quiz_feedback_evaluation"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:drawablePadding="16dp"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            android:text="@string/attempts_submit_in_progress"
            android:textColor="@color/violet1"

            android:layout_above="@id/attemptsSubmitButton"

            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attemptsSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_submit_button_height"
            android:background="@drawable/bg_step_submit_button"

            android:drawablePadding="-36dp"
            android:padding="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            android:text="@string/attempts_submit_all"
            android:textSize="16sp"
            android:textColor="@color/color_step_submit_button_text"
            android:layout_alignParentBottom="true"
            android:gravity="center" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>