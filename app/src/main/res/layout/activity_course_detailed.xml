<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/appbar_only_toolbar" />


    <ListView
        android:id="@+id/list_of_course_property"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/join_course_layout"
        android:layout_below="@+id/appBarLayout"
        android:clipToPadding="false"
        android:divider="@color/transparent"
        android:dividerHeight="@null"
        android:padding="16dp"
        android:scrollbarStyle="outsideOverlay" />


    <RelativeLayout
        android:id="@+id/join_course_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_signin_active"
        android:contentDescription="@string/join_course">

        <org.stepic.droid.view.custom.STextView
            android:id="@+id/login_btn_tv"
            style="@style/regular_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/join_course"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/join_course_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/login_progress"
            android:visibility="gone"
            tools:targetApi="17" />
    </RelativeLayout>
</RelativeLayout>