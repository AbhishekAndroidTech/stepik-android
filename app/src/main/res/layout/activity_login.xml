<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginTop="20dp">


                    <ImageView
                        android:id="@+id/login_logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/stepic_logo" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="44dp"
                    android:paddingRight="44dp">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/edit_text_style"
                        android:hint="@string/email_login"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/password_et"
                        style="@style/edit_text_style"
                        android:layout_marginTop="8dp"
                        android:hint="@string/password_hint"
                        android:imeOptions="actionSend"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/forgot_password_tv"
                        style="@style/semibold_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="@string/remind_password"
                        android:textColor="@color/cyan_text_navigation"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/login_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bt_signin_active"
                        android:contentDescription="@string/sign_in_btn">

                        <org.stepic.droid.view.custom.STextView
                            android:id="@+id/login_btn_tv"
                            style="@style/regular_white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/sign_in"
                            android:textAllCaps="true"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/login_spinner"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:indeterminateDrawable="@drawable/login_progress"
                            android:visibility="gone"
                            tools:targetApi="17" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/login_social_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bt_signin_active"
                        android:contentDescription="@string/sign_in_btn">

                        <org.stepic.droid.view.custom.STextView
                            android:id="@+id/login_social_text"
                            style="@style/regular_white_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/sign_in_social"
                            android:textAllCaps="true"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/login_social_spinner"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:indeterminateDrawable="@drawable/login_progress"
                            android:visibility="gone"
                            tools:targetApi="17" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/panel_login_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                    <org.stepic.droid.view.custom.STextView
                        android:id="@+id/by_signing_up_tv"
                        style="@style/regular_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="@string/by_creating_you_agree"
                        android:textColor="@color/grey_redirected_txt"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <org.stepic.droid.view.custom.STextView
                        android:id="@+id/end_user_agreement_tv"
                        style="@style/regular_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:linksClickable="true"
                        android:text="@string/terms"
                        android:textColor="@color/cyan_text_navigation"
                        android:textSize="11sp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/panel_custom_action_bar" />
    </LinearLayout>

</RelativeLayout>