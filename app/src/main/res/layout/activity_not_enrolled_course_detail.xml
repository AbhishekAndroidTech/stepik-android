<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp">


    <include
        android:id="@+id/appBarLayout"
        layout="@layout/appbar_only_toolbar" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/join_course_layout"
        android:layout_below="@id/appBarLayout"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <WebView
                android:id="@+id/intro_video"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:id="@+id/detail_course_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:id="@+id/course_name"
                    style="@style/cv_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="8dp"
                    android:text="Course Name"
                    android:gravity="center_horizontal" />

                <android.support.v7.widget.CardView
                    android:id="@+id/about_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:cardCornerRadius="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPaddingBottom="@dimen/padding_bottop_cv"
                    app:contentPaddingLeft="@dimen/padding_text_in_cv"
                    app:contentPaddingRight="@dimen/padding_text_in_cv"
                    app:contentPaddingTop="@dimen/padding_bottop_cv">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/cv_text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_text_in_cv"
                            android:text="@string/summary" />

                        <org.stepic.droid.view.custom.ExpandableTextView
                            android:id="@+id/summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="text, text" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/requirements_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:cardCornerRadius="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPaddingBottom="@dimen/padding_bottop_cv"
                    app:contentPaddingLeft="@dimen/padding_text_in_cv"
                    app:contentPaddingRight="@dimen/padding_text_in_cv"
                    app:contentPaddingTop="@dimen/padding_bottop_cv">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/cv_text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_text_in_cv"
                            android:text="@string/requirements" />

                        <org.stepic.droid.view.custom.ExpandableTextView
                            android:id="@+id/requirements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/description_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:cardCornerRadius="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPaddingBottom="@dimen/padding_bottop_cv"
                    app:contentPaddingLeft="@dimen/padding_text_in_cv"
                    app:contentPaddingRight="@dimen/padding_text_in_cv"
                    app:contentPaddingTop="@dimen/padding_bottop_cv">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/cv_text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_text_in_cv"
                            android:text="@string/description" />

                        <org.stepic.droid.view.custom.ExpandableTextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/instructors_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:stretchColumns="0" />

                <include layout="@layout/progress_bar_on_empty_screen" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/join_course_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_signin_active"
        android:contentDescription="@string/join_course">

        <org.stepic.droid.view.custom.STextView
            android:id="@+id/login_btn_tv"
            style="@style/regular_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/join_course"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/join_course_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/login_progress"
            android:visibility="gone"
            tools:targetApi="17" />
    </RelativeLayout>
</RelativeLayout>