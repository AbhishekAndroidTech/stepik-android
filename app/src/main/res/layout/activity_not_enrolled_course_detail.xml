<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="8dp">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/join_course_layout"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="2dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/intro_video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/vimeo_placeholder" />

            <LinearLayout
                android:id="@+id/detail_course_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Course Name" />


                <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summary" />

                <org.stepic.droid.view.custom.ExpandableTextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/requirements" />

                <org.stepic.droid.view.custom.ExpandableTextView
                    android:id="@+id/requirements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description" />

                <org.stepic.droid.view.custom.ExpandableTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/instructors_carousel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:stretchColumns="0" />

                    <ProgressBar
                        android:id="@+id/load_instructors_spinner"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminateDrawable="@drawable/login_progress"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/join_course_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bt_signin_active"
        android:contentDescription="@string/join_course">

        <org.stepic.droid.view.custom.STextView
            android:id="@+id/login_btn_tv"
            style="@style/regular_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/join_course"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/join_course_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/login_progress"
            android:visibility="gone"
            tools:targetApi="17" />
    </RelativeLayout>
</RelativeLayout>