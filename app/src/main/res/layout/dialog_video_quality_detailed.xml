<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/video_quality_presence_text"
        android:textAppearance="?textAppearanceBody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/video_quality_presence_message"/>

    <ListView
        android:id="@+id/video_quality_list_choices"
        android:layout_below="@id/video_quality_presence_text"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/video_quality_do_not_ask_checkbox"
        android:textAppearance="?textAppearanceBody1"
        android:layout_below="@id/video_quality_list_choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/guideline_standard_padding"
        android:layout_marginRight="@dimen/guideline_standard_padding"
        android:text="@string/do_not_ask_me_again"/>

</RelativeLayout>