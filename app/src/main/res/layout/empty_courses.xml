<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/empty_courses"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="true"
             android:focusable="true"
             android:foreground="@drawable/non_radius_foreground"
             android:visibility="gone"
             tools:visibility="visible">

    <TextView
        android:id="@+id/text"
        style="@style/PlaceholderTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_empty_courses_3"
        android:text="@string/empty_courses"
        />
</FrameLayout>