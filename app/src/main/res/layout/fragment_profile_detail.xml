<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/profile_header_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:text="@string/profile_detail_title"
        style="@style/ProfileItemHeader" />

    <org.stepic.droid.ui.custom.LatexSupportableEnhancedFrameLayout
        android:id="@+id/profileDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"

        style="@style/ProfileItemText" />

</androidx.appcompat.widget.LinearLayoutCompat>