<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/SettingCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_settings_wifi_title"
                    style="@style/SettingHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/video_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_external_player_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/open_in_external_player"
                    android:text="@string/open_in_external_player"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_wifi_enable_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/wi_fi_setting"
                    android:text="@string/wi_fi_setting"/>

                <FrameLayout
                    android:id="@+id/video_quality_view"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/non_radius_foreground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_quality"
                        android:textSize="16sp"/>
                </FrameLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/SettingCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_settings_notification_title"
                    style="@style/SettingHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_sound_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/notification_learn_list"
                    android:text="@string/sound_title"/>


                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_vibration_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/notification_learn_list"
                    android:text="@string/vibration_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_learn_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/notification_learn_list"
                    android:text="@string/notification_learn_list"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_comment_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/notification_comment_list"
                    android:text="@string/notification_comment_list"
                    />

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_review_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/reviews_title"
                    android:text="@string/reviews_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_teaching_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/teaching_title"
                    android:text="@string/teaching_title"/>


                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_notification_other_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/other_title"
                    android:text="@string/other_title"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/SettingCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_settings_calendar_title"
                    style="@style/SettingHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_calendar_widget_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/calendar_setting_description"
                    android:text="@string/calendar_setting_description"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/SettingCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/storage"/>

                <FrameLayout
                    android:id="@+id/storage_management_button"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/space_management_title"
                        android:textSize="16sp"/>
                </FrameLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/SettingCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other_title"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_discounting_policy_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/discounting_policy_title_settings"
                    android:text="@string/discounting_policy_title_settings"/>

                <org.stepic.droid.ui.custom.BetterSwitch
                    android:id="@+id/fragment_settings_keep_screen_on_switch"
                    style="@style/SettingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/keep_screen_on_title_settings"
                    android:text="@string/keep_screen_on_title_settings"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>