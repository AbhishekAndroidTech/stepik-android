<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <org.stepic.droid.ui.custom.QuizItemView
        android:id="@+id/itemChoiceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_choice_quiz_item"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemChoiceCheckmark"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/ic_correct_checkmark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <org.stepic.droid.ui.custom.ProgressLatexView
            android:id="@+id/itemChoiceLatex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="12sp"
            android:layout_marginRight="24dp" />
    </org.stepic.droid.ui.custom.QuizItemView>

    <TextView
        android:id="@+id/itemChoiceFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_compound_step_quiz_feedback_tip"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="This is a tip" />
</LinearLayout>
