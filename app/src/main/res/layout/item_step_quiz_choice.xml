<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <org.stepik.android.view.step_quiz_choice.ui.view.QuizItemView
        android:id="@+id/itemChoiceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_step_quiz_choice_item"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/itemChoiceCheckmark"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/ic_correct_checkmark"/>

        <org.stepic.droid.ui.custom.ProgressLatexView
            android:id="@+id/itemChoiceLatex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:layout_marginRight="24dp" />
    </org.stepik.android.view.step_quiz_choice.ui.view.QuizItemView>

    <FrameLayout
        android:id="@+id/itemChoiceFeedbackContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_compound_step_quiz_feedback_tip"
        android:visibility="gone">

        <org.stepic.droid.ui.custom.LatexSupportableEnhancedFrameLayout
            android:id="@+id/itemChoiceFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="14sp"
            android:layout_marginRight="24dp"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"/>
    </FrameLayout>
</LinearLayout>
