<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tableColumnSelectionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <org.stepik.android.view.latex.ui.widget.LatexView
        android:id="@+id/tableColumnSelectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:layout_toRightOf="@id/tableColumnSelectionCheckBox"
        android:layout_centerVertical="true">
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/tableColumnSelectionTextProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible" />
    </org.stepik.android.view.latex.ui.widget.LatexView>

    <FrameLayout
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>