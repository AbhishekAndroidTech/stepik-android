<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/states"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/card_foreground"
    app:cardCornerRadius="@dimen/guideline_list_item_corner">

    <RelativeLayout
        android:id="@+id/course_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/guideline_list_item_height"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingEnd="@dimen/guideline_left_right_padding_list_item"
        android:paddingLeft="@dimen/guideline_left_right_padding_list_item"
        android:paddingRight="@dimen/guideline_left_right_padding_list_item"
        android:paddingStart="@dimen/guideline_left_right_padding_list_item"
        android:paddingTop="4dp">

        <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1. SSection Section" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/section_title"
            android:orientation="vertical">


            <org.stepic.droid.view.custom.STextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start date"
                android:textColor="@color/stepic_weak_text"
                android:textSize="@dimen/text_height" />

            <org.stepic.droid.view.custom.STextView
                android:id="@+id/soft_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soft deadline date"
                android:textColor="@color/stepic_weak_text"
                android:textSize="@dimen/text_height" />

            <org.stepic.droid.view.custom.STextView
                android:id="@+id/hard_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hard deadline date"
                android:textColor="@color/stepic_weak_text"
                android:textSize="@dimen/text_height" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>