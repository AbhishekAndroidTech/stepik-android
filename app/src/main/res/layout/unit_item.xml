<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stepic_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/non_radius_foreground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/guideline_list_item_height"
            android:orientation="horizontal"
            android:padding="@dimen/guideline_left_right_padding_list_item">

            <LinearLayout
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/unit_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/viewed_item"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_circle_green"
                    android:padding="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

                <org.stepic.droid.view.custom.SDetailedCourseHeadersTV
                    android:layout_gravity="center_vertical"
                    android:id="@+id/unit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1.2 Super unit" />


            </LinearLayout>

            <include layout="@layout/load_imageview"/>

        </LinearLayout>

        <View
            android:id="@+id/grey_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver" />
    </LinearLayout>

</FrameLayout>