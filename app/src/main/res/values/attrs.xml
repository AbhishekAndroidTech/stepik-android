<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressWheel">
        <attr name="barColor" format="color"/>
        <attr name="rimColor" format="color"/>
        <attr name="rimWidth" format="dimension"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="contourColorOuter" format="color"/>
        <attr name="contourSize" format="dimension"/>
        <attr name="squareSize" format="dimension"/>
        <attr name="squareColor" format="color"/>
    </declare-styleable>


    <attr name="progressBackgroundColor" format="color"/>
    <attr name="progressForegroundColor" format="color"/>

    <declare-styleable name="CircleProgressView">
        <attr name="progressBackgroundColor" />
        <attr name="progressForegroundColor" />
        <attr name="progressBarStroke" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VerticalProgressBar">
        <attr name="progressBackgroundColor" />
        <attr name="progressForegroundColor" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="radius" format="dimension"/>
        <attr name="duration" format="integer"/>
        <attr name="interval" format="integer"/>
        <attr name="baseColor" format="reference|color"/>
        <attr name="deepColor" format="reference|color"/>
        <attr name="progressLength" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PlaceholderTextView">
        <attr name="android:background"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="AchievementCircleProgressView">
        <attr name="progressColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="progress" format="float" />
    </declare-styleable>

    <declare-styleable name="VectorRatingBar">
        <attr name="progressIcon" format="reference" />
        <attr name="secondaryIcon" format="reference" />
        <attr name="backgroundIcon" format="reference" />

        <attr name="totalProgress" format="integer" />
        <attr name="currentProgress" format="integer" />

        <attr name="itemsGap" format="dimension" />
    </declare-styleable>
</resources>