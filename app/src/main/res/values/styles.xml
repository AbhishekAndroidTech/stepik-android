    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="AppTheme.BrandedLaunch">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowBackground">@drawable/onboarding_background</item>
    </style>


    <style name="AppTheme.PhotoView">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="StepikTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="StepikTheme.LoginLaunchRegistration" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="selectableItemBackgroundRounded">@drawable/selectable_item_rounded_background</item>
        <item name="buttonCornerRadius">@dimen/button_corner_radius</item>
        <item name="colorSecondary">@color/green01</item>
        <item name="colorSecondaryDark">@color/green03</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="buttonStyle">@style/Widget.AppTheme.Button</item>
<!--        <item name="textAppearanceButton">@style/TextAppearance.Button</item>-->

        <item name="colorAccent">@color/green01</item>
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@color/login_launch_registration_background</item>
        <item name="android:colorBackground">@color/login_launch_registration_background</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/new_accent_color</item>
        <item name="colorControlActivated">@color/new_accent_color</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/new_accent_color</item>
        <item name="alertDialogTheme">@style/StepikTheme.LoginDialog</item>
        <item name="android:textColorHighlight">@color/grey03</item>
    </style>

    <style name="StepikTheme.LoginDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/new_accent_color</item>
        <item name="colorOnSecondary">@color/violet1</item>
        <item name="dialogCornerRadius">@dimen/button_corner_radius</item>
        <item name="buttonBarButtonStyle">@style/Widget.AppTheme.Button.TextButton</item>
    </style>

    <style name="AppTheme.VideoPlayer" parent="AppTheme.VideoPlayer.7" />

    <style name="AppTheme.VideoPlayer.7" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/green01</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
<!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
    </style>

    <style name="BottomSheetShareItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/share_item_padding</item>
        <item name="android:padding">@dimen/share_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="PlaceholderButton" parent="Widget.AppTheme.Button.OutlinedButton">
        <item name="android:theme">@style/ThemeOverlay.Violet</item>
    </style>

    <style name="SettingHeaderTextView">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:theme">@style/ThemeOverlay.Violet</item>
        <item name="android:layout_marginTop">@dimen/settings_offset_vertical</item>
        <item name="android:paddingTop">@dimen/settings_offset_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_offset_vertical</item>
        <item name="android:paddingLeft">@dimen/settings_offset_horizontal</item>
        <item name="android:paddingRight">@dimen/settings_offset_horizontal</item>
    </style>

    <style name="SettingSwitch">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="switchTextAppearance">?textAppearanceBody1</item>
        <item name="android:switchTextAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:paddingLeft">@dimen/settings_offset_horizontal</item>
        <item name="android:paddingRight">@dimen/settings_offset_horizontal</item>
        <item name="android:paddingTop">@dimen/settings_offset_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_offset_vertical</item>
    </style>

    <style name="LoginEditFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="hintEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CourseWidgetPropertyTextView">
        <item name="android:layout_marginLeft">@dimen/course_item_property_text_image_margin</item>
        <item name="android:layout_marginRight">@dimen/course_item_property_between_items_margin</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CourseWidgetPropertyImageView">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">?alphaEmphasisMedium</item>
        <item name="android:tint">?colorOnSurface</item>
    </style>

    <style name="FastContinueSubtextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="NewContinueButton">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StepikSpinnerItem" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="VideoTimeThumbnail" parent="AppTheme.Widget.TextView">
        <item name="android:background">@color/background_time_thumbnail</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="StepikToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
    </style>

    <style name="PopupAnimations">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
    </style>

    <style name="Adaptive.BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/borderless_button_text_color</item>
    </style>


    <style name="Adaptive" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/new_primary_color</item>
        <item name="colorPrimaryDark">@color/new_accent_color</item>
        <item name="colorAccent">@color/new_accent_color</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Adaptive.White" parent="Adaptive">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Adaptive.ReactionStamp">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AdaptiveLevelDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/AdaptiveLevelDialogTheme.Window</item>
    </style>

    <style name="AdaptiveLevelDialogTheme.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/adaptive_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/adaptive_dialog_out</item>
    </style>

    <style name="CourseTabAppearance">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/new_accent_color</item>
    </style>
    
    <style name="StepikTheme.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="StepQuizFeedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="StepQuizDescription">
        <item name="android:textColor">@color/new_accent_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.03</item>
    </style>

    <style name="ProfileStat">
<!--        <item name="android:background">@drawable/bg_rounded_selectable_item</item>--> <!-- disabled during analytics study -->
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ProfileItemHeader">
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="drawableTint">?colorControlNormal</item>
    </style>

    <style name="ProfileItemText">
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="DownloadsProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/downloads_progress</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="CourseReviewSummaryCountTitle">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Buttons custom -->
    <style name="Widget.AppTheme.Button.TextButton.Small" parent="Widget.AppTheme.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>
</resources>
