<resources>

    <style name="StepikTheme" parent="StepikTheme.15"/>

    <style name="StepikTheme.15" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/new_primary_color</item>
        <item name="colorPrimaryDark">@color/new_accent_color</item>
        <item name="colorAccent">@color/new_accent_color</item>

        <!--this change the background of main window (activity)-->
        <item name="android:windowBackground">@color/white</item>

        <!--this change the background of main window (activity and) AND all the components (dialogs) -->
        <item name="android:colorBackground">@color/white</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/NewStepikButton</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorSwitchThumbNormal">#D8D8D8</item>
        <item name="android:colorForeground">#c7c7c7</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more_vert</item>
    </style>


    <style name="AppTheme" parent="AppTheme.15"/>

    <style name="AppTheme.15" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/new_accent_color</item>

        <!--this change the background of main window (activity)-->
        <item name="android:windowBackground">@color/old_cover</item>

        <!--this change the background of main window (activity and) AND all the components (dialogs) -->
        <item name="android:colorBackground">@color/old_cover</item>

        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:actionBarStyle">@style/StepicActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorSwitchThumbNormal">#D8D8D8</item>
        <item name="android:colorForeground">#c7c7c7</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="AppTheme.BrandedLaunch">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="AppTheme.PhotoView">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.LoginLaunchRegistration">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@color/login_launch_registration_background</item>
        <item name="android:colorBackground">@color/login_launch_registration_background</item>
    </style>

    <style name="AppTheme.VideoPlayer" parent="AppTheme.VideoPlayer.7"/>

    <style name="AppTheme.VideoPlayer.7" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/stepic_brand_primary_dark</item>
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="StepicSmallMaterialButton" parent="Theme.AppCompat.Light">
        <item name="android:minHeight">@dimen/height_of_small_button</item>
        <item name="android:maxHeight">@dimen/height_of_small_button</item>
        <item name="android:textSize">@dimen/stepik_text_size_in_button</item>
        <item name="android:background">@drawable/new_button_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomSheetShareItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/share_item_padding</item>
        <item name="android:padding">@dimen/share_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textSize">@dimen/text_size_placeholders</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_placeholders</item>
        <item name="android:textColor">@color/stepic_weak_text</item>
    </style>

    <style name="previousNextTextViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SettingHeaderTextView">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
    </style>

    <style name="SettingCardStyle">
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
    </style>

    <style name="SettingCompoundButton">
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:layout_marginLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingBottom">@dimen/guideline_standard_padding</item>
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
    </style>

    <style name="SettingSwitch">
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:paddingBottom">@dimen/guideline_standard_padding</item>
        <item name="android:paddingLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
    </style>

    <style name="NewSettingSwitch">
        <item name="android:textColor">@color/new_accent_color</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:paddingBottom">@dimen/guideline_standard_padding</item>
        <item name="android:paddingLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
    </style>


    <style name="StepikButtonStyleBase" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/min_ux_touchable_size</item>
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/launchTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="LoginButtons" parent="StepikButtonStyleBase">
        <item name="android:minWidth">@dimen/min_max_width_for_tablets</item>
        <item name="android:minHeight">@dimen/min_max_width_for_tablets</item>
        <item name="android:textSize">@dimen/launch_button_text_size</item>
    </style>

    <style name="TryAgainButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/launchTextColor</item>
    </style>

    <style name="PrivacyPolicyTextStyle">
        <item name="android:textSize">@dimen/launch_not_button_text_size</item>
        <item name="android:textColorLink">@color/stepic_brand_primary</item>
        <item name="android:textColor">@color/launchTextColor</item>
    </style>

    <style name="ContinueCourseButtons" parent="StepikButtonStyleBase">
        <item name="android:textSize">@dimen/continue_course_button_text_size</item>
    </style>

    <style name="StepikSpinnerItem" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="VideoTimeThumbnail" parent="AppTheme.Widget.TextView">
        <item name="android:background">@color/background_time_thumbnail</item>
        <item name="android:textColor">@color/text_color_time_thumbnail</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="StreakDrawerTextView">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/half_padding</item>
    </style>

    <style name="MainDrawerTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="ExoMediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

    <style name="RateItemTextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/guideline_standard_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/rate_dialog_button_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ProfileTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StepikToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

    <style name="StepikToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textColor">@color/new_accent_color</item>
    </style>

    <style name="NewStepikButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:background">@drawable/new_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/min_ux_touchable_size</item>
    </style>


</resources>
