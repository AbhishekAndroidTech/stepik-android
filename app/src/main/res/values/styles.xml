<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/stepic_brand_primary_dark</item>
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
        <item name="android:windowBackground">@color/stepic_cover</item>
        <item name="android:colorBackground">@color/stepic_cover</item>
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/stepic_brand_primary</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>
</resources>
