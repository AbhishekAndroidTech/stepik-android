<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/stepic_brand_primary_dark</item>
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
        <item name="android:windowBackground">@color/stepic_cover</item>
        <item name="android:colorBackground">@color/stepic_cover</item>
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:actionBarStyle">@style/StepicActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/StepicButton</item>
    </style>

    <style name="AppTheme.BrandedLaunch">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@drawable/branded_logo</item>

    </style>

    <style name="AppTheme.VideoPlayer" parent="AppTheme.VideoPlayer.7"/>
    <style name="AppTheme.VideoPlayer.7" parent="Theme.AppCompat">
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/stepic_brand_primary</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>

    <style name="StepicButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:background">@drawable/btn_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="fontPath">fonts/NotoSans-Bold.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/min_ux_touchable_size</item>
    </style>

    <style name="StepicSmallMaterialButton" parent="@style/Widget.AppCompat.Button.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
