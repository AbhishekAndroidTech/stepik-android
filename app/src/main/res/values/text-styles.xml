<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bold_text">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="regular_text">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="cv_text_title" parent="regular_text">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="streakValueStyle">
        <item name="android:padding">@dimen/half_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/streak_default_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LanguageFilterItem">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/min_ux_touchable_size</item>
        <item name="android:minWidth">@dimen/min_ux_touchable_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="CatalogItemTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/new_accent_color_alpha_30</item>
        <item name="android:layout_marginTop">@dimen/guideline_standard_padding</item>
        <item name="android:layout_marginLeft">@dimen/course_list_side_padding</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>